<catel:DataWindow x:Class="Orc.Analytics.Example.Views.MainWindow"
                  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                  xmlns:catel="http://catel.codeplex.com"
                  ShowInTaskbar="True" ResizeMode="CanResize" SizeToContent="Manual" 
                  WindowStartupLocation="Manual" WindowState="Normal" MinWidth="600" MinHeight="400">

    <catel:StackGrid x:Name="LayoutRoot">
        <catel:StackGrid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </catel:StackGrid.RowDefinitions>

        <StackPanel Orientation="Horizontal">
            <!-- TODO: Create buttons -->
        </StackPanel>

        <Label>
            <TextBlock TextWrapping="Wrap">
                Use any of the buttons above to create some analytics. It shows how to use the analytics and how to interact with it.
            </TextBlock>
        </Label>
        
        <catel:EmptyCell Grid.ColumnSpan="1" />
        
        <TextBox x:Name="outputTextBox" IsReadOnly="True" Height="200" />
    </catel:StackGrid>

</catel:DataWindow>
