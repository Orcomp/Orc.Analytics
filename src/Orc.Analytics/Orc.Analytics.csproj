<Project Sdk="MSBuild.Sdk.Extras">
  <PropertyGroup>
    <TargetFrameworks>net46;net47;netcoreapp3.0</TargetFrameworks>
    <AssemblyName>Orc.Analytics</AssemblyName>
    <RootNamespace>Orc.Analytics</RootNamespace>
    <DefaultLanguage>en-US</DefaultLanguage>
    <PackageId>Orc.Analytics</PackageId>
    <PackageVersion>3.0.0-alpha0001</PackageVersion>
    <Description>Analytics library.</Description>
    <PackageTags>orc;analytics;google</PackageTags>
    <UseWpf>true</UseWpf>
  </PropertyGroup>
  
  <PropertyGroup>
    <!-- SonarQube requires a project guid -->
    <ProjectGuid>C839A214-77A0-4C1A-AD2F-1F95C11F770B</ProjectGuid>
  </PropertyGroup>
  
  <ItemGroup>
    <PackageReference Include="Catel.Analyzers" Version="1.0.0" PrivateAssets="all" />
    <PackageReference Include="Catel.Fody" Version="4.2.0" PrivateAssets="all" />
    <PackageReference Include="Catel.MVVM" Version="5.11.2" />
    <PackageReference Include="Costura.Fody" Version="4.1.0" PrivateAssets="all" />
    <PackageReference Include="Fody" Version="6.0.0" PrivateAssets="all">
      <IncludeAssets>runtime; build; native; contentfiles; analyzers</IncludeAssets>
    </PackageReference>
    <PackageReference Include="GoogleAnalyticsSDK" Version="1.3.1" PrivateAssets="all" />
    <PackageReference Include="LoadAssembliesOnStartup.Fody" Version="4.2.0" PrivateAssets="all" />
    <PackageReference Include="MethodTimer.Fody" Version="3.1.0" PrivateAssets="all" />
    <PackageReference Include="Microsoft.Net.Http" Version="2.2.29" PrivateAssets="all" />
    <PackageReference Include="ModuleInit.Fody" Version="2.1.0" PrivateAssets="all" />
    <PackageReference Include="Obsolete.Fody" Version="5.1.0" PrivateAssets="all" />
    <PackageReference Include="Orc.SystemInfo" Version="3.1.0" />
    <PackageReference Include="System.Net.Http" Version="4.3.4" />
    <PackageReference Include="WpfAnalyzers" Version="2.2.0.2" PrivateAssets="all" />
  </ItemGroup>
  
  <ItemGroup>
    <Compile Update="Properties\Resources.Designer.cs">
      <DesignTime>True</DesignTime>
      <AutoGen>True</AutoGen>
      <DependentUpon>Resources.resx</DependentUpon>
    </Compile>
  </ItemGroup>
  
  <ItemGroup>
    <EmbeddedResource Update="Properties\Resources.resx">
      <Generator>ResXFileCodeGenerator</Generator>
      <LastGenOutput>Resources.Designer.cs</LastGenOutput>
    </EmbeddedResource>
  </ItemGroup>
  
  <ItemGroup>
    <PackageReference Update="NETStandard.Library" Version="2.0.1" />
  </ItemGroup>
  
  <Import Project="$(MSBuildProjectDirectory)\..\Directory.build.shared.explicit.props" Condition="Exists('$(MSBuildProjectDirectory)\..\Directory.build.shared.explicit.props')" />
  <Import Project="$(MSBuildProjectDirectory)\..\Directory.build.shared.mat.props" Condition="Exists('$(MSBuildProjectDirectory)\..\Directory.build.shared.mat.props')" />
</Project>